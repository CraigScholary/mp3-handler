<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <springProperty scope="context" name="appName" source="spring.application.name" defaultValue="mp3-handler"/>
    <springProperty scope="context" name="logstashHost" source="logging.logstash.host" defaultValue="localhost"/>
    <springProperty scope="context" name="logstashPort" source="logging.logstash.port" defaultValue="5044"/>

    <!-- Console appender with JSON format -->
    <appender name="CONSOLE_JSON" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <includeMdcKeyName>jobId</includeMdcKeyName>
            <includeMdcKeyName>bucket</includeMdcKeyName>
            <includeMdcKeyName>key</includeMdcKeyName>
            <includeMdcKeyName>chunk_index</includeMdcKeyName>
            <includeMdcKeyName>event_type</includeMdcKeyName>
            <customFields>{"application":"${appName}"}</customFields>
        </encoder>
    </appender>

    <!-- Standard console appender (non-JSON) -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} [%X{jobId}] - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Logstash TCP appender (dev profile only) -->
    <springProfile name="dev">
        <appender name="LOGSTASH" class="net.logstash.logback.appender.LogstashTcpSocketAppender">
            <destination>${logstashHost}:${logstashPort}</destination>
            <encoder class="net.logstash.logback.encoder.LogstashEncoder">
                <includeMdcKeyName>jobId</includeMdcKeyName>
                <includeMdcKeyName>bucket</includeMdcKeyName>
                <includeMdcKeyName>key</includeMdcKeyName>
                <includeMdcKeyName>chunk_index</includeMdcKeyName>
                <includeMdcKeyName>start</includeMdcKeyName>
                <includeMdcKeyName>end</includeMdcKeyName>
                <includeMdcKeyName>overlapStart</includeMdcKeyName>
                <includeMdcKeyName>overlapEnd</includeMdcKeyName>
                <includeMdcKeyName>nudged</includeMdcKeyName>
                <includeMdcKeyName>nudgeDelta</includeMdcKeyName>
                <includeMdcKeyName>durationSeconds</includeMdcKeyName>
                <includeMdcKeyName>transcribeMs</includeMdcKeyName>
                <includeMdcKeyName>leftChunk</includeMdcKeyName>
                <includeMdcKeyName>rightChunk</includeMdcKeyName>
                <includeMdcKeyName>overlapSeconds</includeMdcKeyName>
                <includeMdcKeyName>dupRemoved</includeMdcKeyName>
                <includeMdcKeyName>overlapCharsRemoved</includeMdcKeyName>
                <includeMdcKeyName>attempt</includeMdcKeyName>
                <includeMdcKeyName>maxRetries</includeMdcKeyName>
                <includeMdcKeyName>errorType</includeMdcKeyName>
                <includeMdcKeyName>event_type</includeMdcKeyName>
                <customFields>{"application":"${appName}"}</customFields>
            </encoder>
            <keepAliveDuration>5 minutes</keepAliveDuration>
        </appender>
    </springProfile>

    <!-- Root logger configuration -->
    <springProfile name="dev">
        <root level="INFO">
            <appender-ref ref="CONSOLE_JSON"/>
            <appender-ref ref="LOGSTASH"/>
        </root>
        <logger name="com.scholary.mp3.handler" level="DEBUG"/>
    </springProfile>

    <springProfile name="!dev">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
        <logger name="com.scholary.mp3.handler" level="INFO"/>
    </springProfile>

    <!-- Reduce noise from Spring and AWS SDK -->
    <logger name="org.springframework" level="WARN"/>
    <logger name="software.amazon.awssdk" level="WARN"/>
</configuration>
